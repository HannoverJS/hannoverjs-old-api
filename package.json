{
  "name": "hannoverjs",
  "version": "2.0.0",
  "description": "Convenience wrapper for `got` to interact with the HannoverJS API",
  "repository": "hannoverjs/hannoverjs",
  "license": "MIT",
  "author": "Tim Cheung <tim@cheung.io>",
  "scripts": {
    "precommit": "lint-staged",
    "lint": "xo",
    "test": "npm run lint && nyc ava",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "prettier": "prettier --single-quote --no-semi --write",
    "prettify": "npm run prettier -- *.js"
  },
  "files": [
    "index.js"
  ],
  "keywords": [
    "hannover",
    "hannoverjs",
    "api",
    "request",
    "got"
  ],
  "dependencies": {
    "got": "^7.1.0"
  },
  "devDependencies": {
    "ava": "*",
    "codecov": "^2.2.0",
    "eslint-config-prettier": "^2.3.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.1",
    "nock": "^9.0.2",
    "nyc": "^11.0.3",
    "prettier": "^1.5.2",
    "xo": "*"
  },
  "xo": {
    "extends": "prettier"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "npm run prettier",
      "git add"
    ]
  }
}
